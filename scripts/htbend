#!/bin/bash

VAULT="$HOME/Obsidian/HTB"
JOURNAL="$VAULT/daily/$(date +%F).md"
ENDTIME=$(date +"%T")

# Check for todayâ€™s journal
if [ ! -f "$JOURNAL" ]; then
  echo "[!] No journal found for today."
  exit 1
fi

# Append session end time
echo -e "\n## ðŸ•’ Session Ended: $ENDTIME\n" >> "$JOURNAL"

# Add closing summary (optional checklist)
cat <<EOF >> "$JOURNAL"
### ðŸ“Œ End-of-Day Summary
- [ ] Reviewed commands
- [ ] Reflected on lessons
- [ ] Planned next steps
EOF

# Git commit and push
cd "$VAULT"
git add "$JOURNAL"
git commit -m "ðŸ›‘ Session closed for $(date +%F)"
git push

echo "[âœ“] Session ended and pushed to GitHub."
