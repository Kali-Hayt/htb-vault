#!/bin/bash

VAULT_DIR="$HOME/Obsidian/hacking-journal"
JOURNAL="$VAULT_DIR/daily/$(date +%F).md"

if [ ! -f "$JOURNAL" ]; then
    echo "# ðŸ§  Hacking Log - $(date +%F)" > "$JOURNAL"
    echo -e "\n## ðŸ“‹ Commands Run\n\`\`\`bash" >> "$JOURNAL"
fi

echo "[$(date +'%H:%M:%S')] $*" >> "$JOURNAL"
echo "$*"  # Optional: echo it back in the terminal
